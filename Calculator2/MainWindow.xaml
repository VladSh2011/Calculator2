<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator2"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="300">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="UpperTextBlock" Grid.ColumnSpan="4" Text="{Binding Operation, Mode=TwoWay}" Style="{StaticResource TextBlock.Style}"/>
        <TextBlock x:Name="Operand" Text="{Binding Operand}" Grid.Row="1" Grid.ColumnSpan="4" Style="{StaticResource TextBlock.Style}"/>
        <Button Content="1" Grid.Column="0" Grid.Row="2" Command="{Binding InputCommand}" CommandParameter="1"/>
        <Button Content="2" Grid.Column="1" Grid.Row="2" Command="{Binding InputCommand}" CommandParameter="2"/>
        <Button Content="3" Grid.Column="2" Grid.Row="2" Command="{Binding InputCommand}" CommandParameter="3"/>
        <Button Content="4" Grid.Column="0" Grid.Row="3" Command="{Binding InputCommand}" CommandParameter="4"/>
        <Button Content="5" Grid.Column="1" Grid.Row="3" Command="{Binding InputCommand}" CommandParameter="5"/>
        <Button Content="6" Grid.Column="2" Grid.Row="3" Command="{Binding InputCommand}" CommandParameter="6"/>
        <Button Content="7" Grid.Column="0" Grid.Row="4" Command="{Binding InputCommand}" CommandParameter="7"/>
        <Button Content="8" Grid.Column="1" Grid.Row="4" Command="{Binding InputCommand}" CommandParameter="8"/>
        <Button Content="9" Grid.Column="2" Grid.Row="4" Command="{Binding InputCommand}" CommandParameter="9"/>
        <Button Content="+" Grid.Column="3" Grid.Row="2" Command="{Binding OperationCommand}" CommandParameter="+"/>
        <Button Content="-" Grid.Column="3" Grid.Row="3" Command="{Binding OperationCommand}" CommandParameter="-"/>
        <Button Content="*" Grid.Column="3" Grid.Row="4" Command="{Binding OperationCommand}" CommandParameter="*"/>
        <Button Content="/" Grid.Column="3" Grid.Row="5" Command="{Binding OperationCommand}" CommandParameter="/"/>
        <Button Content="0" Grid.Column="0" Grid.Row="5" Command="{Binding InputCommand}" CommandParameter="0"/>
        <Button Content="^" Grid.Column="1" Grid.Row="5"/>
        <Button Content="√" Grid.Column="2" Grid.Row="5"/>
        <Button Content="!" Grid.Column="0" Grid.Row="6"/>
        <Button Content="C" Grid.Column="1" Grid.Row="6" Command="{Binding ClearAllCommand}"/>
        <Button Content="Del" Grid.Column="2" Grid.Row="6" Command="{Binding DeleteCommand}"/>
        <Button Content="CE" Grid.Column="3" Grid.Row="6" Command="{Binding ClearCommand}"/>
        <Button Content="." Grid.Column="0" Grid.Row="7" Command="{Binding PointInputCommand}"/>
        <Button Content="=" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="3" Command="{Binding CalculateCommand}"/>
    </Grid>
</Window>
