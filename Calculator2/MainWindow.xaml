<Window x:Class="Calculator2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator2"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="300" WindowStyle="None" MouseDown="Window_MouseDown" AllowsTransparency="True" Icon="/package_toys.ico">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="0" Key="NumPad0"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="0" Key="D0"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="1" Key="NumPad1"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="1" Key="D1"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="2" Key="NumPad2"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="2" Key="D2"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="3" Key="NumPad3"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="3" Key="D3"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="4" Key="NumPad4"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="4" Key="D4"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="5" Key="NumPad5"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="5" Key="D5"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="6" Key="NumPad6"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="6" Key="D6"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="7" Key="NumPad7"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="7" Key="D7"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="8" Key="NumPad8"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="8" Key="D8"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="9" Key="NumPad9"/>
        <KeyBinding Command="{Binding InputCommand}" CommandParameter="9" Key="D9"/>
        <KeyBinding Command="{Binding PointInputCommand}" Key="Decimal"/>
        <KeyBinding Command="{Binding PointInputCommand}" Key="OemComma"/>
        <KeyBinding Command="{Binding PointInputCommand}" Key="OemPeriod"/>
        <KeyBinding Command="{Binding OperationCommand}" CommandParameter="+" Key="Add"/>
        <KeyBinding Command="{Binding OperationCommand}" CommandParameter="+" Key="OemPlus"/>
        <KeyBinding Command="{Binding OperationCommand}" CommandParameter="-" Key="Subtract"/>
        <KeyBinding Command="{Binding OperationCommand}" CommandParameter="-" Key="OemMinus"/>
        <KeyBinding Command="{Binding OperationCommand}" CommandParameter="/" Key="Divide"/>
        <KeyBinding Command="{Binding OperationCommand}" CommandParameter="/" Key="Oem2"/>
        <KeyBinding Command="{Binding OperationCommand}" CommandParameter="*" Key="Multiply"/>
        <KeyBinding Command="{Binding CalculateCommand}" Key="Enter"/>
        <KeyBinding Command="{Binding DeleteCommand}" Key="Backspace"/>
        <KeyBinding Command="{Binding ClearAllCommand}" Key="Escape"/>
        <KeyBinding Command="{Binding ClearCommand}" Key="Delete"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <Image Source="/package_toys.ico"/>
            <Button Content="*" Height="20" Width="20" FontSize="10">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard TargetProperty="Height" TargetName="SetPanel">
                                <DoubleAnimation From="0" To="450" AutoReverse="False" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Right">
            <Button x:Name="HideBtn" Content="_" FontSize="10" Height="20" Width="20" Click="HideBtn_OnClick"/>
            <Button x:Name="MaximizeBtn" Content="[]" FontSize="10" Height="20" Width="20" Click="MaximizeBtn_OnClick"/>
            <Button x:Name="CloseBtn" Content="x" FontSize="10" Height="20" Width="20" Click="CloseBtn_OnClick"/>
        </StackPanel>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="4" Text="{Binding Operation}" Style="{StaticResource TextBlock.Style}"/>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="4" Style="{DynamicResource TextBlock.Style}" Text="{Binding Operand}"/>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="4" Style="{DynamicResource TextBlock.Style}"
                   Text="Zero division error" Visibility="{Binding HasError, Converter={StaticResource  BoolToVisibilityConverter}}"/>
        <Button Content="1" Grid.Column="0" Grid.Row="3" Command="{Binding InputCommand}" CommandParameter="1"/>
        <Button Content="2" Grid.Column="1" Grid.Row="3" Command="{Binding InputCommand}" CommandParameter="2"/>
        <Button Content="3" Grid.Column="2" Grid.Row="3" Command="{Binding InputCommand}" CommandParameter="3"/>
        <Button Content="+" Grid.Column="3" Grid.Row="3" Command="{Binding OperationCommand}" CommandParameter="+"/>
        <Button Content="4" Grid.Column="0" Grid.Row="4" Command="{Binding InputCommand}" CommandParameter="4"/>
        <Button Content="5" Grid.Column="1" Grid.Row="4" Command="{Binding InputCommand}" CommandParameter="5"/>
        <Button Content="6" Grid.Column="2" Grid.Row="4" Command="{Binding InputCommand}" CommandParameter="6"/>
        <Button Content="-" Grid.Column="3" Grid.Row="4" Command="{Binding OperationCommand}" CommandParameter="-"/>
        <Button Content="7" Grid.Column="0" Grid.Row="5" Command="{Binding InputCommand}" CommandParameter="7"/>
        <Button Content="8" Grid.Column="1" Grid.Row="5" Command="{Binding InputCommand}" CommandParameter="8"/>
        <Button Content="9" Grid.Column="2" Grid.Row="5" Command="{Binding InputCommand}" CommandParameter="9"/>
        <Button Content="*" Grid.Column="3" Grid.Row="5" Command="{Binding OperationCommand}" CommandParameter="*"/>
        <Button Content="/" Grid.Column="3" Grid.Row="6" Command="{Binding OperationCommand}" CommandParameter="/"/>
        <Button Content="0" Grid.Column="0" Grid.Row="6" Command="{Binding InputCommand}" CommandParameter="0"/>
        <Button Content="^" Grid.Column="1" Grid.Row="6"/>
        <Button Content="√" Grid.Column="2" Grid.Row="6"/>
        <Button Content="!" Grid.Column="0" Grid.Row="7"/>
        <Button Content="C" Grid.Column="1" Grid.Row="7" Command="{Binding ClearAllCommand}"/>
        <Button Content="Del" Grid.Column="2" Grid.Row="7" Command="{Binding DeleteCommand}"/>
        <Button Content="CE" Grid.Column="3" Grid.Row="7" Command="{Binding ClearCommand}"/>
        <Button Content="." Grid.Column="0" Grid.Row="8" Command="{Binding PointInputCommand}"/>
        <Button Content="=" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="3" Command="{Binding CalculateCommand}"/>
        <WrapPanel x:Name="SetPanel" Width="300" Height="0" Grid.ColumnSpan="4" Grid.RowSpan="9" Orientation="Vertical" Background="Aqua">
            <Button Content="x" Height="20" Width="20" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard TargetProperty="Height" TargetName="SetPanel">
                                <DoubleAnimation From="450" To="0" AutoReverse="False" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <RadioButton x:Name="DefaultRB" Content="Default theme" Margin="20,0,0,0"/>
            <RadioButton x:Name="GraytRB" Content="Gray theme" Margin="20,0,0,0"/>
        </WrapPanel>
    </Grid>
</Window>
